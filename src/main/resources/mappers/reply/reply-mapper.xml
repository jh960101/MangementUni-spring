<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
        namespace="com.university.management.reply.mapper.ReplyMapper">
    
    <insert id="insertReply" parameterType="reply">
        INSERT INTO REPLY
            (STU_NO, BO_NO, REPLY_CONTENT) VALUES
            (#{stu_No},#{bo_No},#{reply_Content})
    </insert>

    <select id="selectAllReply" parameterType="int" resultType="com.university.management.reply.dto.Reply">
        SELECT * FROM REPLY WHERE BO_NO = ${bo_no}
    </select>

</mapper>