	<!-- 공지사항 전체 목록 갯수 조회 -->
	<select id="selectBoardCount" resultType="int">
		SELECT COUNT(*) FROM
		BOARD
		WHERE TYPE = 'G'
	</select>

	<select id="getBoardListCount" parameterType="java.util.Map"
		resultType="int">
		SELECT COUNT(*)
		FROM BOARD B
		JOIN EMPLOYEE E ON B.EMP_NO = E.EMP_NO
		WHERE TYPE = 'G'
		<if
			test="searchType != null and searchValue != null and searchValue.trim() != ''">
			AND
			<choose>
				<when test="searchType == 'writer'">
					E.EMP_NAME LIKE CONCAT('%', #{searchValue}, '%')
				</when>
				<when test="searchType == 'title'">
					B.TITLE LIKE CONCAT('%', #{searchValue}, '%')
				</when>
				<otherwise>
					1=1
				</otherwise>
			</choose>
		</if>
	</select>

	<!-- 공지사항 전체 목록 조회 -->
	<select id="selectBoardList" parameterType="java.util.Map"
		resultType="com.university.management.board.dto.Board">
		SELECT *
		FROM (
		SELECT B.BO_NO,
		E.EMP_NAME,
		B.TITLE,
		B.CONTENT,
		B.READCOUNT,
		B.CREATE_DATE,
		B.MODIFY_DATE,
		B.BO_LIKE
		FROM BOARD B
		JOIN
		EMPLOYEE E ON B.EMP_NO = E.EMP_NO
		WHERE TYPE = 'G'
		<if
			test="searchType != null and searchValue != null and searchValue.trim() != ''">
			AND
			<choose>
				<when test="searchType == 'writer'">
					E.EMP_NAME LIKE CONCAT('%', #{searchValue}, '%')
				</when>
				<when test="searchType == 'title'">
					B.TITLE LIKE CONCAT('%', #{searchValue}, '%')
				</when>
				<otherwise>
					1=1
				</otherwise>
			</choose>
		</if>
		ORDER BY BO_NO DESC
		) T11
		ORDER BY CREATE_DATE DESC
		LIMIT #{listLimit}
		OFFSET #{firstRow}
	</select>

	<!-- 상세페이지 이동을 위한 게시글 번호 조회 -->
	<select id="findByNo" parameterType="int"
		resultType="com.university.management.board.dto.Board">
		SELECT B.BO_NO,
		E.EMP_NAME,B.TITLE,B.CONTENT,B.READCOUNT,B.CREATE_DATE, B.MODIFY_DATE,
		B.BO_LIKE
		FROM BOARD B
		JOIN EMPLOYEE E ON B.EMP_NO = E.EMP_NO
		WHERE TYPE
		= "G" AND BO_NO = ${no}
	</select>

	<!-- 조회수 -->
	<update id="readCount" parameterType="int">
		UPDATE BOARD SET READCOUNT
		= READCOUNT+1
		WHERE BO_NO = #{bo_no}
	</update>

	<select id="empSelect" parameterType="String" resultType="int">
		SELECT
		EMP_NO FROM EMPLOYEE
		WHERE EMP_NAME = #{emp_name}
	</select>

	<!-- 공지사항 게시글 추가 -->
	<insert id="insertWrite" parameterType="Board">
		INSERT INTO BOARD
		(EMP_NO, TITLE, CONTENT, TYPE, ORIGINAL_FILENAME, READCOUNT) VALUES
		(#{emp_no},#{title},#{content},'G',#{originalFilename}, 0)
	</insert>

	<!-- 공지사항 게시글 삭제 -->
	<delete id="deleteByNo">
		DELETE FROM BOARD
		WHERE BO_NO = #{no}
	</delete>

	<update id="updateByNoList" parameterType="java.util.Map">
		UPDATE BOARD
		SET emp_no
		= #{loginNo}, title = #{title}, content = #{content}, type= 'G',
		RENAME_FILENAME = #{originalFilename}, CREATE_DATE = now()
		WHERE bo_no
		= #{bo_no}
	</update>

<!-- resources/mapper/BoardMapper.xml -->


    <insert id="insertBoard" parameterType="com.university.management.board.dto.BoardDTO">
        INSERT INTO UNIVERSITY.BOARD (
            STU_NO, EMP_NO, TITLE, CONTENT, TYPE, ORIGINAL_FILENAME, RENAME_FILENAME, CREATE_DATE, BO_LIKE
        ) VALUES (
            #{stuNo}, #{empNo}, #{title}, #{content}, #{type}, #{originalFilename}, #{renameFilename}, NOW(), 0
        )
    </insert>





</mapper>